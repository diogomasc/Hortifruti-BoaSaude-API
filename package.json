{
  "name": "hortifruti-boasaude-api",
  "version": "1.0.0",
  "description": "API RESTful para gestão do marketplace de assinatura de hortifrúti com Node, Fastify e Drizzle ORM desenvolvida durante disciplina de Eng. de Software no IFBA 2025.2",
  "main": "index.js",
  "scripts": {
    "dev": "tsx --watch src/server.ts",
    "build": "tsup src --out-dir build",
    "start": "node build/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:reset": "docker-compose down && docker-compose up -d && timeout /t 5 && npm run db:migrate",
    "db:clean": "docker-compose down -v && docker-compose up -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diogomasc/Hortifruti-BoaSaude-API.git"
  },
  "keywords": [],
  "author": "Diogo Mascarenhas Ferreira Santos",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/diogomasc/Hortifruti-BoaSaude-API/issues"
  },
  "homepage": "https://github.com/diogomasc/Hortifruti-BoaSaude-API#readme",
  "dependencies": {
    "@faker-js/faker": "9.9.0",
    "@fastify/cors": "11.1.0",
    "@fastify/multipart": "9.2.1",
    "@fastify/static": "8.2.0",
    "@fastify/swagger": "9.5.1",
    "@fastify/swagger-ui": "5.2.3",
    "argon2": "0.44.0",
    "dotenv": "17.2.2",
    "drizzle-orm": "1.0.0-beta.1-fd5d1e8",
    "fastify": "5.6.0",
    "fastify-type-provider-zod": "5.1.0",
    "jsonwebtoken": "9.0.2",
    "pg": "8.16.3",
    "pino-pretty": "13.1.1",
    "zod": "4.1.9"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "24.5.2",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "drizzle-kit": "^1.0.0-beta.1-fd5d1e8",
    "supertest": "7.1.4",
    "tsup": "8.5.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
